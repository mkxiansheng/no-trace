
{{#each articles}}
<div class="widget widget-article widget-shadow">
	<div class="widget-header cover overlay-hover overlay">
		{{!-- <img class="cover-image overlay-scale" src="/img/portraits/placeholder.png" alt="..."> --}}
	</div>
	<div class="widget-body">
		<p class="widget-metas type-link">
			By
			<a href="javascript:void(0)">{{author}}</a>
			<a href="javascript:void(0)">{{data}}</a>
			<a href="javascript:void(0)">
				<span>3</span> Comments
			</a>
		</p>
		<h3 class="widget-title">{{title}}</h3>
		<p>{{content}}</p>
		<div class="widget-body-footer">
			<div class="widget-actions pull-left">
				<a href="javascript:void(0)">
					<i class="icon md-share"></i>
				</a>
				<a href="javascript:void(0)">
					<i class="icon md-favorite"></i>
					<span>253</span>
				</a>
				<a href="javascript:void(0)">
					<i class="icon md-comment"></i>
					<span>115</span>
				</a>
			</div>
			<a class="btn btn-info pull-right waves-effect waves-light" href="javascript:void(0)">
				<i class="icon md-chevron-right"></i> Read More
			</a>
		</div>
	</div>
</div>
{{/each}}